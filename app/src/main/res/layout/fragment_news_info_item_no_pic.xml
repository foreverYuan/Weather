<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_fragment_news_info_item_no_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_fragment_news_info_item_no_pic_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凤凰网"
        android:layout_below="@+id/tv_fragment_news_info_item_no_pic_title"
        android:layout_marginTop="9dp"/>
    <TextView
        android:id="@+id/tv_fragment_news_info_item_no_pic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_fragment_news_info_item_no_pic_source"
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>