<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_fragment_news_info_item_multi_pic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新闻标题"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/img_fragment_news_info_item_multi_pic_pic1"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_fragment_news_info_item_multi_pic_title"/>
    <ImageView
        android:id="@+id/img_fragment_news_info_item_multi_pic_pic2"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_fragment_news_info_item_multi_pic_title"
        android:layout_toRightOf="@+id/img_fragment_news_info_item_multi_pic_pic1"/>
    <ImageView
        android:id="@+id/img_fragment_news_info_item_multi_pic_pic3"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_fragment_news_info_item_multi_pic_title"
        android:layout_toRightOf="@+id/img_fragment_news_info_item_multi_pic_pic2"/>
    <TextView
        android:id="@+id/tv_fragment_news_info_item_multi_pic_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凤凰网"
        android:layout_below="@+id/img_fragment_news_info_item_multi_pic_pic1"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/tv_fragment_news_info_item_multi_pic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_fragment_news_info_item_multi_pic_source"
        android:textColor="@android:color/darker_gray"/>

</RelativeLayout>