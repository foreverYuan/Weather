<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ListView
    android:id="@+id/lv_fragment_local_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/rl_fragment_local_music_playing_info"
    android:scrollbars="none"
    android:cacheColorHint="@android:color/transparent"/>
    <RelativeLayout
        android:id="@+id/rl_fragment_local_music_playing_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <SeekBar
            android:id="@+id/sb_fragment_local_music_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fragment_local_music_playing_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音乐名"
            android:layout_below="@+id/sb_fragment_local_music_duration"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_fragment_local_music_previous"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tv_fragment_local_music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"
            android:layout_below="@+id/tv_fragment_local_music_playing_music_name"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_fragment_local_music_previous"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/btn_fragment_local_music_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/music_previous_normal"
            android:layout_toLeftOf="@+id/btn_fragment_local_music_play"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn_fragment_local_music_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/music_play_normal"
            android:layout_toLeftOf="@+id/btn_fragment_local_music_next"
            android:layout_alignTop="@+id/btn_fragment_local_music_previous"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_fragment_local_music_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/music_next_normal"
            android:layout_toLeftOf="@+id/btn_fragment_local_music_pattern"
            android:layout_alignTop="@+id/btn_fragment_local_music_previous"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn_fragment_local_music_pattern"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/btn_fragment_local_music_previous"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>